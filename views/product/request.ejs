<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="/libs/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <title>Add Product</title>
      <link rel="stylesheet" href="/css/product/add.css">
      <%- include partials/loadercss %>
    </head>

    <body>
      
        <%- include partials/loader %>
        <br><br><br>
        <div class="main container">
          <h3 class="center-align">Product Request</h3>
           <div class="row">
            <div class="col s12 m2"></div>
            <div class="col s12 m8">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title center-align"><b><%- product.name %></b></span>
                  <div id="requestId" style="display: none"><%- request.id%></div>
                  <p> <b>Name : </b> <%- request.name%></p>
                  <p><b>Mobile : </b> <%- request.mobile%></p>
                  <p><b>Address : </b><%- request.address%></p>
                </div>
                <div class="card-action">
                  <a href="javascript:void(0)" id="send" 
                   <% if(request.served ){ %>
                        disabled style = "pointer-events: none"
                    <% } else{ %>  
                        
                    <% } %> >
                    <% if(!request.served ){ %>
                        Send
                    <% } else{ %>  
                        Sent
                    <% } %>

                  </a>
                </div>
              </div>
            </div>
          </div>           
                  
        </div>

        <%- include partials/errors %>

      <!--JavaScript at end of body for optimized loading-->
      <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
      <script type="text/javascript" src="/js/libs/materialize.min.js"></script>
      <script src="http://malsup.github.com/jquery.form.js"></script> 
      <script src="/js/product/request.js"></script>
    </body>
  </html>

