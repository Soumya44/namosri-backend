<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="/libs/materialize.min.css" media="screen,projection" />

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Instruction update page</title>
  <link rel="stylesheet" href="/css/recipe/update.css">
  <%- include partials/loadercss %>
</head>

<body>

  <%- include partials/loader %>
  <div id="iid" hidden>
    <%- iid %>
  </div>

  <div class="main container">
    <div class="row">
      <div class="col s12 m2"></div>
      <div class="col s12 m8">
        <h3 class="center-align">Update Instruction</h3>
        <form id="instructionUpdate">
          <div class="input-field">
            <textarea id="newDescription" class="materialize-textarea"></textarea>
            <label for="newDescription">New Description</label>
          </div>
          <input class="waves-effect waves-light btn" type="submit" value="Update Instruction">
        </form>

        <div class="info"></div>
      </div>
      <div class="col s12 m2"></div>
    </div>
  </div>

  <%- include partials/errors %>

  <!--JavaScript at end of body for optimized loading-->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/libs/materialize.min.js"></script>
  <script src="/js/instruction/update.js"></script>
</body>

</html>